[Unit]
Description=<%= scope['neo4j::service_name'] %>
After=network.target

[Service]
Type=forking
WorkingDirectory=<%= scope['neo4j::neo4j_bin'] %>
ExecStart=<%= scope['neo4j::neo4j_bin'] %>/<%= scope['neo4j::service_start'] %> > /dev/null 2>&1
ExecStop=<%= scope['neo4j::neo4j_bin'] %>/<%= scope['neo4j::service_stop'] %> > /dev/null 2>&1
PIDFile=/var/run/neo4j.pid

[Install]
WantedBy=multi-user.target
